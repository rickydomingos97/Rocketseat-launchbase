{% extends "layout.njk" %}

{% block head %}
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<title>Cursos - Rocketseat</title>
{% endblock %}
<!-- esse bloco vai ser enviado para o layout mas so sera carregado nessa pagina -->

{% block content %}


    <div id="wrapper">
        <h1>{{item.title}}</h1>
    </div>

    <section class="cards">

        {% for item in items %}
        <div class="card" id="{{item.id}}">
            <div class="card__image-container">
                <a href="/courses/{{item.id}}">
                    <img src="{{item.image}}" alt="Imagem de {{item.id}}">
                </a>
                
            </div>

            <div class="card__content">
                <p>{{item.title}}</p>
            </div>

            <div class="card__info">
                <p>{{item.duration}}</p>
                <p>{{item.modules}}</p>              
            </div>            
        </div>
        {% endfor %}

    </section>

    <script src="scripts.js"></script>

{% endblock %}